{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "useUnknownInCatchVariables": false
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "ts-node": {
    "swc": true,
    "transpileOnly": true
  },
  "typeRoots": ["./src/utils/tstypes"]
}
